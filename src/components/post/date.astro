---
import { date as dateFormatConfig } from "@src/config";

const { date: dateValue } = Astro.props as { date?: Date };
const dateObj = dateValue instanceof Date ? dateValue : dateValue ? new Date(dateValue) : new Date();
---

<time itemprop="datePublished" class="dt-published" datetime={dateObj.toISOString()}>
  {dateObj.toLocaleString(dateFormatConfig.locales, dateFormatConfig.options)}
</time>
